
<% @backends.each do |name,host| -%>

backend <%= name %> {
    .host = "<%= host %>";
}

<% end -%>

sub vcl_recv {
<% @backends.each do |name,host| -%>
  if (req.http.host == "<%= name %>.<%= @domain %>") {
    set req.http.host = "<%= host %>";
    set req.backend = <%= name %>;
  } 
<% end -%>
}
